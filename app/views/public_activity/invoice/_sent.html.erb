
<% label = activity.parameters[:company] + " Invoice has been sent to " + activity.parameters[:client_name] + " " + activity.parameters[:client_last_name] %>

<li>
  <% if activity.trackable %>
  <%= link_to invoice_path(activity.trackable) do %>
  <i class="fa fa-paper-plane-o" aria-hidden="true" id= "paperplane-icon"></i>
  <%= label %>
  <% end %>
  <% else %>
  <%= label %>
  <% end %>
  <div class="timestamp pull-right">  <%= time_ago_in_words(activity.created_at)%> ago </div></li>
